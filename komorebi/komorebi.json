{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 2,
  "default_container_padding": 2,
  "border": true,
  "border_width": 3,
  "border_offset": -1,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "bar_accent": "Subtext1",
    "single_border": "Mauve",
    "floating_border": "Peach"
  },
  "stackbar": {
    "height": 20,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "display_index_preferences": {
    "0": "IVM761B-5&3adbc4c9&0&UID261",
    "1": "CMN14D4-5&3adbc4c9&0&UID256"
  },

  "bar_configurations": [
    "$Env:KOMOREBI_CONFIG_HOME/bar.GB3271QSU_iiyama.json",
    "$Env:KOMOREBI_CONFIG_HOME/bar.SF314-42_laptop.json"
  ],
  "monitors": [
    {
      // Primary monitor
      "workspaces": [
        {
          "name": "1",
          "layout": "VerticalStack",
          "workspace_rules": [
            {
              "kind": "Title",
              "id": "SecondBrain"
            }
          ]
        },
        {
          "name": "2",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "vivaldi.exe"
            },
          ]
        },
        {
          "name": "3",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "WindowsTerminal.exe"
            },
          ]
        },
        {
          "name": "4",
          "layout": "VerticalStack"
        },
        {
          "name": "5",
          "layout": "VerticalStack"
        }
      ]
    },
    // Secondary monitor
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "VerticalStack",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify.exe"
            },
          ]

        },
        {
          "name": "2",
          "layout": "VerticalStack"
        },
        {
          "name": "3",
          "layout": "VerticalStack"
        },
      ]
    },
  ]
}

